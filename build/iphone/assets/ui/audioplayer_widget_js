const MILK=.8;exports.create=function(e,t,i){if(t){var o=Ti.Media.createAudioPlayer({url:t,allowBackground:!0}),r=Ti.UI.createView({right:"5dp",left:"5dp",height:"45dp"});r.progress=Ti.UI.createProgressBar({min:0,max:i||1800,height:Ti.UI.FILL,width:Ti.UI.FILL,right:0,left:"160dp"}),r.add(r.progress),r.navi=Ti.UI.createView({backgroundImage:"/assets/player.png",width:"150dp",left:"5dp",height:"45dp"}),r.add(r.navi);var n=Ti.UI.createView({left:0,width:"50dp",height:"50dp",backgroundColor:"white",opacity:MILK}),s=Ti.UI.createView({width:"50dp",height:"50dp",backgroundColor:"white",opacity:0}),p=Ti.UI.createView({right:0,width:"50dp",height:"50dp",backgroundColor:"white",opacity:MILK});return r.navi.add(n),r.navi.add(s),r.navi.add(p),r.navi.addEventListener("click",function(){o.playing||o.paused?(s.setOpacity(0),p.setOpacity(MILK),Ti.Media.vibrate(),o.stop(),"android"===Ti.Platform.name&&o.release()):(s.setOpacity(MILK),p.setOpacity(0),o.start())}),o.addEventListener("progress",function(e){console.log(e.progress/1e3),r.progress.setValue(e.progress/1e3)}),e.addEventListener("close",function(){(o.playing||o.paused)&&(setTimeout(function(){o.stop(),"android"===Ti.Platform.osname&&o.release()},10),alert("Die Audiowiedergabe wird abgebrochen."))}),r}};